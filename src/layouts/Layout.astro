---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="flex flex-col bg-gray-900 w-full min-h-screen items-start justify-start px-4 py-8 sm:py-10 lg:justify-center">
		<Header />
		<main class="flex flex-col justify-center items-center w-full max-w-5xl mx-auto">
			<slot />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color-scheme: dark light;
	}
	/* Adjustments for responsive behavior */
	body {
		padding: 20px;
	}
	@media (min-width: 640px) {
		body {
			padding: 40px;
		}
	}
	@media (min-width: 1024px) {
		body {
			padding: 60px;
		}
	}
</style>
