import type { Character } from "../types/charactersApi";
import { getCharacters } from "../lib/character";

const { results }: { results: Character[] } =
  (await getCharacters()) as unknown as { results: Character[] };

// Add a function to load more characters
const loadMore = async () => {
  const { results: newResults }: { results: Character[] } =
    (await getCharacters()) as unknown as { results: Character[] };
  results.push(...newResults);
};
